<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#292929"
    app:contentPadding="1dp"
    app:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:id="@+id/LeaderboardCardLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#588FD1"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/LeaderboardCardNameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#EDECEC"
            app:fontFamily="@font/vt323"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/LeaderboardCardScoreView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textColor="#EDECEC"
            app:fontFamily="@font/vt323"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>